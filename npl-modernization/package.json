{
  "name": "npl-modernization-tests",
  "version": "1.0.0",
  "description": "Integration and E2E tests for the NPL Modernization project",
  "private": true,
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:node && npm run test:ui",
    "test:node": "jest --config jest.config.node.js",
    "test:angular": "jest --config jest.config.angular.js",
    "test:integration": "jest --config jest.config.node.js tests/integration",
    "test:sync": "jest --config jest.config.node.js tests/sync-service",
    "test:ui": "npm --prefix frontend-overlay run test",
    "test:integration:device": "jest --config jest.config.node.js tests/integration/device-management-integration.test.ts",
    "test:integration:tenant": "jest --config jest.config.node.js tests/integration/tenant-management-integration.test.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "axios": "^1.7.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "@angular/core": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/compiler-cli": "^16.2.0",
    "rxjs": "^7.8.1",
    "jest-preset-angular": "^12.2.6",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.24.7",
    "buffer": "^6.0.3",
    "zone.js": "~0.13.0"

  }
}
